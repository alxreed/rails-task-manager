<%= form_for(task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  </div>
  <% if task.id  %>
  <div class="form-group">
  <%= f.label "Completed" %>
  </div>
  <div class="form-check">
  <%= f.check_box :completed, class: "form-check" %>
  </div>
  <% end  %>
  <%= f.submit "Submit", class: "btn btn-primary"%>
<% end %>